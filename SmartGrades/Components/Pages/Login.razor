@page "/"
@inject SmartGrades.Services.DataServices DataServices
@inject NavigationManager Nav
@layout AuthLayout

<div class="register-box">

    <div class="media-box">
    <img src="images/loginpic.gif"
         alt="Login Image" />
</div>


    <!-- TITLE -->
    <h2 class="title">تسجيل الدخول</h2>

    <!-- FULL NAME -->
    <div class="field">
        <label>اسم الأستاذ</label>
        <input placeholder="اكتب اسمك الكامل"
               maxlength="30"
               @bind="fullName" />
    </div>

    <!-- PASSWORD -->
    <div class="field">
        <label>كلمة المرور</label>
        <input type="password"
               placeholder="أدخل كلمة المرور"
               maxlength="30"
               @bind="password" />
    </div>

    <!-- BUTTON -->
    <button @onclick="DoLogin">تسجيل الدخول</button>

    <!-- REGISTER LINK -->
    <div class="login-hint">
        ليس لديك حساب؟
        <a href="/Register">حساب جديد</a>
    </div>

</div>

@if (showDialog)
{
    <div class="dialog-overlay">
        <div class="dialog-box @dialogType">
            <div class="dialog-icon">@dialogIcon</div>
            <p>@dialogMessage</p>
            <button @onclick="CloseDialog">حسناً</button>
        </div>
    </div>
}

@code {
    string fullName = string.Empty;
    string password = string.Empty;

    bool showDialog = false;
    string dialogMessage = string.Empty;
    string dialogType = string.Empty;
    string dialogIcon = string.Empty;

    async Task DoLogin()
    {
        if (string.IsNullOrWhiteSpace(fullName))
        {
            ShowError("اسم الأستاذ مطلوب");
            return;
        }

        if (string.IsNullOrWhiteSpace(password))
        {
            ShowError("كلمة المرور مطلوبة");
            return;
        }

        try
        {
            var teacher = await DataServices.LoginAsync(fullName, password);

            if (teacher == null)
            {
                ShowError("اسم المستخدم أو كلمة المرور غير صحيحة");
                return;
            }

            ShowSuccess("تم تسجيل الدخول بنجاح");

            // ⏳ انتظار بسيط لعرض الرسالة
            await Task.Delay(500);

            // ✅ الانتقال إلى الصفحة الرئيسية
            Nav.NavigateTo("/Home", true);
        }
        catch
        {
            ShowError("تعذر الاتصال بالخادم، تحقق من الاتصال بالإنترنت");
        }
    }

    void ShowError(string text)
    {
        dialogMessage = text;
        dialogType = "error";
        dialogIcon = "✖";
        showDialog = true;
    }

    void ShowSuccess(string text)
    {
        dialogMessage = text;
        dialogType = "success";
        dialogIcon = "✔";
        showDialog = true;
    }

    void CloseDialog()
    {
        showDialog = false;
    }
}
