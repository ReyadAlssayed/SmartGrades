@page "/Admins"
@layout MainLayout
@using SmartGrades.Model
@inject SmartGrades.Services.DataServices DataServices

<div class="admins-page">
    <div class="page-header-wrapper">
        <h2 class="page-title">إدارة المسؤولين</h2>
    </div>

    <div class="table-wrapper">
        <table class="admins-table">
            <thead>
                <tr>
                    <th>الاسم الكامل</th>
                    <th>رقم الهاتف</th>
                    <th>آخر تسجيل دخول</th>
                    <th>الحالة</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @if (AdminsList == null)
                {
                    <tr>
                        <td colspan="5" style="text-align:center;">جاري التحميل...</td>
                    </tr>
                }
                else
                {
                    @foreach (var admin in AdminsList)
                    {
                        <tr>
                            <td>@admin.FullName</td>
                            <td>@admin.PhoneNumber</td>
                            <td>
                                @(admin.LastLoginAt == null ? "—" : admin.LastLoginAt.Value.ToString("yyyy-MM-dd HH:mm"))
                            </td>
                            <td>
                                <span class="status @(admin.IsActive ? "active" : "inactive")">
                                    @(admin.IsActive ? "نشط" : "غير نشط")
                                </span>
                            </td>
                            <td class="actions">
                                <button class="btn-edit" @onclick="() => OpenEditDialog(admin)">تعديل</button>
                                <button class="btn-delete" @onclick="() => OpenDeleteDialog(admin)">حذف</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@if (ShowFormDialog)
{
    <div class="dialog-overlay">
        <div class="dialog-box">
            <h3>تعديل بيانات المسؤول</h3>
            <input placeholder="الاسم الكامل" @bind="FormAdmin.FullName" />
            <input placeholder="رقم الهاتف" @bind="FormAdmin.PhoneNumber" />

            <div class="check-row">
                <label>
                    مسؤول نشط
                    <input type="checkbox" @bind="FormAdmin.IsActive" />
                </label>
            </div>

            @if (!string.IsNullOrEmpty(FormError))
            {
                <div class="form-error">@FormError</div>
            }

            <button class="dialog-action" @onclick="SaveAdmin">حفظ التعديلات</button>
            <button class="dialog-close" @onclick="CloseForm">إلغاء</button>
        </div>
    </div>
}

@if (ShowDeleteDialog)
{
    <div class="dialog-overlay">
        <div class="dialog-box">
            <h3>تأكيد الحذف</h3>
            <p>هل تريد حذف المسؤول: <strong>@SelectedAdmin?.FullName</strong> ؟</p>
            <button class="dialog-action danger" @onclick="ConfirmDelete">حذف نهائي</button>
            <button class="dialog-close" @onclick="CloseDelete">إلغاء</button>
        </div>
    </div>
}

@code {
    List<Admin>? AdminsList;
    bool ShowFormDialog;
    bool ShowDeleteDialog;
    Admin FormAdmin = new();
    Admin? SelectedAdmin;
    string FormError = "";

    protected override async Task OnInitializedAsync()
    {
        AdminsList = await DataServices.GetAdminsAsync();
    }

    void OpenEditDialog(Admin admin)
    {
        FormError = "";
        FormAdmin = new Admin
        {
            Id = admin.Id,
            FullName = admin.FullName,
            PhoneNumber = admin.PhoneNumber,
            IsActive = admin.IsActive
        };
        ShowFormDialog = true;
    }

    async Task SaveAdmin()
    {
        if (string.IsNullOrWhiteSpace(FormAdmin.FullName) || string.IsNullOrWhiteSpace(FormAdmin.PhoneNumber))
        {
            FormError = "يرجى ملء جميع الحقول";
            return;
        }

        await DataServices.UpdateAdminAsync(FormAdmin);
        ShowFormDialog = false;
        AdminsList = await DataServices.GetAdminsAsync();
    }

    void CloseForm() => ShowFormDialog = false;

    void OpenDeleteDialog(Admin admin)
    {
        SelectedAdmin = admin;
        ShowDeleteDialog = true;
    }

    async Task ConfirmDelete()
    {
        if (SelectedAdmin != null)
        {
            await DataServices.DeleteAdminAsync(SelectedAdmin.Id);
            ShowDeleteDialog = false;
            AdminsList = await DataServices.GetAdminsAsync();
        }
    }

    void CloseDelete() => ShowDeleteDialog = false;
}